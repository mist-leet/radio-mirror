<icecast>
    <location>Earth</location>
    <admin>admin@domain</admin>
    <limits>
        <clients>100</clients>
        <sources>5</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>
    <authentication>
        <source-password>admin</source-password>
        <relay-password>admin</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>admin</admin-password>
    </authentication>
    <hostname>localhost</hostname>

    <listen-socket>
        <port>8001</port>
        <shoutcast-mount>/stream_main</shoutcast-mount>
    </listen-socket>
    <listen-socket>
        <port>8002</port>
        <shoutcast-mount>/stream_jazz</shoutcast-mount>
    </listen-socket>

    <mount>
        <mount-name>/stream_main</mount-name>
        <username>source</username>
        <password>admin</password>
    </mount>

    <mount>
        <mount-name>/stream_jazz</mount-name>
        <username>source</username>
        <password>admin</password>
    </mount>
    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*"/>
    </http-headers>
    <fileserve>1</fileserve>
    <paths>
        <basedir>/usr/share/icecast2</basedir>
        <logdir>/var/log/icecast2</logdir>
        <webroot>/usr/share/icecast2/web</webroot>
        <adminroot>/usr/share/icecast2/admin</adminroot>
    </paths>
</icecast>